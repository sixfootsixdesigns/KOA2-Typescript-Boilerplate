{
  "name": "koa2-api",
  "version": "1.0.0",
  "description": "Koa2 API With Typescript",
  "private": true,
  "license": "MIT",
  "main": "app.js",
  "scripts": {
    "db:migrate": "./scripts/migrate-db.sh",
    "db:seed": "./scripts/seed-db.sh",
    "build": "tsc --project .",
    "dev:start": "./scripts/dev.sh",
    "dev": "docker-compose -f docker-compose.yml up --build",
    "format": "prettier --write \"src/**/*.{ts,json,js}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,json,js}\"",
    "lint": "tslint --project .",
    "start": "yarn db:migrate && ./scripts/start.sh",
    "test:start": "mocha --opts ./mocha.opts $(find src -name '*.spec.ts')",
    "test": "docker-compose -f docker-compose.test.yml up --build",
    "test:watch": "yarn test:start --watch"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "dotenv": "^6.2.0",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-404-handler": "^0.0.2",
    "koa-better-error-handler": "^1.3.6",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "moment": "^2.23.0",
    "pg": "^7.7.1",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.0",
    "@types/knex": "^0.15.1",
    "@types/koa": "^2.0.47",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.35",
    "@types/koa__cors": "^2.2.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2"
  }
}
